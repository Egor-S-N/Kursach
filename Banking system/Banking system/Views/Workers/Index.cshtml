@model IEnumerable<Banking_system.Models.Workers>
@using Banking_system.Models

@{
    ViewBag.Title = "Index";
    BankDBEntities db = new BankDBEntities();
    
    
}
<title>Сотруники</title>
<h2>Сотрудники</h2>

<p>
    @Html.ActionLink("Добавить нового сотрудника", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Фамилия")
        </th>
        <th>
            @Html.DisplayName("Имя")
        </th>
        <th>
            @Html.DisplayName("Отчество")
        </th>
        <th>
            @Html.DisplayName("Должность")
        </th>

        <th>
            @Html.DisplayName("Действия")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Post)
        </td>
       

        <td>
            @Html.ActionLink("Изментиь", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
