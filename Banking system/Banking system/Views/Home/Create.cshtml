@using Banking_system.Models
@model Banking_system.Models.Requests

<link href="~/Views/Home/styles.css" rel="stylesheet" />
<title>Создание заявки</title>
<h2>Создание заявки</h2>




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
<div class="form-horizontal">
    <div class="form-group">
        @{
            BankDBEntities db = new BankDBEntities();
            var test = (from s in db.CreditTypes select s.Name);
        }
        <div class="col-md-5">
            Выберите тип кредита:
            @Html.DropDownList("Credit", new MultiSelectList(test.ToArray()), new { @ID = "test" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            Укажите сумму кредита:
            @Html.TextBox("Summ", "", new { type = "number" })
        </div>
    </div>

  


</div>

   

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </div>
</div>
}


