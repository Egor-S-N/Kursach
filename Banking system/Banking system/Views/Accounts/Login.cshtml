                @{
                    if (TempData["msg"] != null)
                    {
                        @Html.ValidationMessage("Username", "Неверный логин или пароль", new { @class = "text-danger" })
                    }
                }
                </div>
            </div>*@

        <div class="form-group" style="margin-left:20%;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Войти" class="btn btn-default buttons" />
                @*@Html.ActionLink("Зарегестрироваться", "Register")*@
                <a class="btn btn-default buttons" href="/Accounts/Register" style="margin-left:23px">Зарегестрироваться</a>
            </div>
        </div>
        <p>
@*<script>
